<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsFragment"
    android:id="@+id/fragment_movie_details_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster_iv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:paddingStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_label"
        android:textStyle="bold"
        android:text="@string/movie_title"
        app:layout_constraintLeft_toRightOf="@id/poster_iv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="20dp"
        android:textSize="@dimen/title_text_size"
        android:paddingBottom="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_tv"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/title_label"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:paddingTop="20dp"
        android:textSize="@dimen/title_text_size"
        android:paddingBottom="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_label"
        android:text="@string/movie_rating"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintLeft_toRightOf="@id/poster_iv"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:textSize="@dimen/base_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_tv"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintLeft_toRightOf="@id/rating_label"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/base_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_label"
        android:text="@string/movie_date"
        app:layout_constraintTop_toBottomOf="@id/rating_tv"
        app:layout_constraintLeft_toRightOf="@id/poster_iv"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:textSize="@dimen/base_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_tv"
        app:layout_constraintTop_toBottomOf="@id/rating_tv"
        app:layout_constraintLeft_toRightOf="@id/date_label"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/base_text_size"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_favorites_button"
        android:src="@drawable/star_face24x24"
        app:layout_constraintTop_toBottomOf="@id/date_label"
        app:layout_constraintLeft_toRightOf="@id/poster_iv"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overview_label"
        android:text="@string/movie_overview"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/add_favorites_button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="@dimen/base_text_size"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overview_tv"
        app:layout_constraintTop_toBottomOf="@id/overview_label"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/base_text_size" />

</android.support.constraint.ConstraintLayout>