<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ingredient_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_tv"

        app:layout_constraintTop_toBottomOf="@id/ingredient_tv"
        android:paddingBottom="10dp"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredient_separator_tv"
        app:layout_constraintTop_toBottomOf="@id/ingredient_tv"
        app:layout_constraintLeft_toRightOf="@id/quantity_tv"
        android:text="@string/separator"
        android:textSize="12sp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/measure_tv"
        app:layout_constraintTop_toBottomOf="@id/ingredient_tv"
        app:layout_constraintLeft_toRightOf="@id/ingredient_separator_tv"
        android:paddingBottom="10dp"
        android:textSize="12sp"/>


</android.support.constraint.ConstraintLayout>