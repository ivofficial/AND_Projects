<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeDetailActivity">

   <FrameLayout
       android:layout_width="200dp"
       android:layout_height="match_parent"
       android:id="@+id/steps_list_fragment"
       android:layout_marginTop="0dp"
       android:layout_marginStart="0dp"
       android:layout_marginLeft="0dp"
       android:layout_marginBottom="0dp"
       android:layout_marginEnd="0dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ingredients_detail_fragment"
        app:layout_constraintLeft_toRightOf="@id/steps_list_fragment"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/steps_detail_fragment"
        app:layout_constraintLeft_toRightOf="@id/steps_list_fragment"/>

</LinearLayout>